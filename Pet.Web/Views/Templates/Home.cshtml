<h4>Welcome to Get-a-Pet

    @if (Request.IsAuthenticated)
    {
        <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" style="float:right" ng-click="homeController.showSearch()">
            <i class="material-icons logo-colour">search</i>
        </button>
        <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" style="float:right" ng-click="homeController.clearSearch()">
            <i class="material-icons logo-colour">clear</i>
        </button>
    }
    
    
</h4>

<hr />
@if (Request.IsAuthenticated)
{
    <h5>
        Find the perfect pet for you
    </h5>

    <div ng-if="homeController.showInput == true">
        <md-card>
            <md-card-title>
                <md-card-title-text>
                    <span class="md-headline">Your ideal pet</span>
                    <span class="md-subhead">One step closer to finding your perfect buddy</span>
                </md-card-title-text>
            </md-card-title>

            <md-card-content>
                <div layout="row">
                    <md-input-container class="logo-colour">
                        <label class="logo-colour">Species</label>
                        <md-select class="logo-colour" ng-model="homeController.searchOptions.Species">
                            <md-option><em>None</em></md-option>
                            <md-option value="1"> DOG </md-option>
                            <md-option value="2"> CAT </md-option>
                            <md-option value="3"> RODENT </md-option>
                            <md-option value="4"> FISH </md-option>
                            <md-option value="5"> REPTILE </md-option>
                            <md-option value="6"> INSECTS </md-option>
                            <md-option value="7"> HORSE </md-option>
                            <md-option value="9"> OTHER </md-option>
                        </md-select>
                    </md-input-container>

                    <md-input-container>
                        <label>Color</label>
                        <md-select ng-model="homeController.searchOptions.Color">
                            <md-option><em>None</em></md-option>
                            <md-option value="1"> WHITE </md-option>
                            <md-option value="2"> BLACK </md-option>
                            <md-option value="3"> BROWN </md-option>
                            <md-option value="4"> RED </md-option>
                            <md-option value="5"> GRAY </md-option>
                            <md-option value="6"> CREAM </md-option>
                            <md-option value="7"> FAWN </md-option>
                            <md-option value="9"> BLUE </md-option>
                        </md-select>
                    </md-input-container>
                </div>
            </md-card-content>

            <md-card-content>
                <div layout="row">
                    <md-input-container>
                        <md-radio-group layout="row" ng-model="petSaveController.pet.PureBreed">
                            <md-radio-button value="true"> Yes </md-radio-button>
                            <md-radio-button value="false"> No </md-radio-button>
                        </md-radio-group>
                    </md-input-container>

                    <md-input-container>
                        <label>Breed</label>
                        <input ng-model="homeController.searchOptions.Breed">
                    </md-input-container>



                </div>
            </md-card-content>


            <md-card-content>
                <div layout="row">
                    <md-input-container>
                        <label>Size</label>
                        <md-select ng-model="homeController.searchOptions.Size">
                            <md-option><em>None</em></md-option>
                            <md-option value="1"> NORMAL </md-option>
                            <md-option value="2"> SMALL </md-option>
                            <md-option value="3"> MEDIUM </md-option>
                            <md-option value="4"> LARGE </md-option>
                            <md-option value="5"> EXTRA LARGE </md-option>
                            <md-option value="6"> TOY </md-option>
                        </md-select>
                    </md-input-container>

                    <md-input-container>
                        <label>Fur type</label>
                        <md-select ng-model="homeController.searchOptions.Fur">
                            <md-option><em>None</em></md-option>
                            <md-option value="1"> SMOOTH </md-option>
                            <md-option value="2"> WHIRE </md-option>
                            <md-option value="3"> LONG </md-option>
                            <md-option value="4"> CURLY </md-option>
                    </md-input-container>

                    <md-button class="md-raised" style="float:right" ng-click="homeController.hideSearch()">OK</md-button>

                </div>
            </md-card-content>

        </md-card>
    </div>

    <div ng-if="homeController.search==false" ng-repeat="pet in homeController.pets" class="repeated-item" flex="">
        <div style="float:left;margin: 0 20px 20px 0;" class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" style="background: url({{pet.ImageUrl}}) center center no-repeat; background-size: cover;">
                <h2 class="mdl-card__title-text">{{pet.Name}}</h2>
            </div>
            <div class="mdl-card__supporting-text">
                {{Pet.Description}}
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" ng-click="homeController.getPetProfile($event, pet)">
                    <i class="material-icons logo-colour">pets</i>
                </button>
                <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" ng-click="homeController.getConversation(pet.ID)">
                    <i class="material-icons logo-colour">mail_outline</i>
                </button>
            </div>
        </div>
    </div>

    <div ng-if="homeController.search==true" ng-repeat="pet in homeController.pets | filter:{ Species: homeController.searchOptions.Species, PureBreed: homeController.searchOptions.PureBreed ,Color:searchOptions.Color }" class="repeated-item" flex="">
        <div style="float:left;margin: 0 20px 20px 0;" class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" style="background: url({{pet.ImageUrl}}) center center no-repeat; background-size: cover;">
                <h2 class="mdl-card__title-text">{{pet.Name}}</h2>
            </div>
            <div class="mdl-card__supporting-text">
                {{Pet.Description}}
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" ng-click="homeController.getPetProfile($event, pet)">
                    <i class="material-icons logo-colour">pets</i>
                </button>
                <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" ng-click="homeController.getConversation(pet.ID)">
                    <i class="material-icons logo-colour">mail_outline</i>
                </button>
            </div>
        </div>
    </div>
}
@if (!Request.IsAuthenticated)
{
    <h5>
        @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" }) or @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" }) to the perfect pet for you
    </h5>

    <div ng-repeat="pet in homeController.pets" class="repeated-item" flex="">
        <div style="float:left;margin: 0 20px 20px 0;" class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" style="background: url({{pet.ImageUrl}}) center center no-repeat; background-size: cover;">
                <h2 class="mdl-card__title-text">{{pet.Name}}</h2>
            </div>
        </div>
    </div>
}
